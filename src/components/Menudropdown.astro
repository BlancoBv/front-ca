---
import regExp from "../assets/regExp";
interface Props {
  name: string;
  items: { title: string; to: string }[];
  test: string;
}
const { pathname } = Astro.url;
const { name, items, test } = Astro.props;
---

<div class="relative inline-block text-left group">
  <button
    class="inline-flex items-center justify-center px-4 text-black transition duration-150 ease-in-out"
    class:list={[
      "border-blue-600",
      { "border-b-2 text-blue-600": regExp(test, pathname) },
    ]}
  >
    {name}
  </button>

  <div
    class="hidden absolute right-0 mt-1 origin-top-right bg-white border border-gray-200 divide-y divide-gray-100 rounded-md shadow-lg group-hover:block"
  >
    {
      items.map((element) => (
        <a
          href={element.to}
          class="block px-4 py-2 text-sm leading-5 text-gray-700 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 focus:text-gray-800"
        >
          {element.title}
        </a>
      ))
    }
  </div>
</div>
