---
import { ViewTransitions } from "astro:transitions";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar";
import NavSuperior from "../components/NavSuperior";
import Accesibilidad from "../components/Accesibilidad";
interface Props {
  title: string;
}
const { title } = Astro.props;
const { pathname } = Astro.url;
export const urlMain = "http://localhost:4321";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <header
      class="text-white h-16 py-2 px-2 sm:px-10 bg-blue-900 flex flex-row justify-between"
    >
      <span
        class="text-xl font-bold w-0 invisible sm:visible sm:w-2/4 flex items-center"
        >TecNM campus de los rios</span
      >
      <NavSuperior client:visible />
    </header>
    <div class="sticky top-0 p-2 bg-white h-32 flex flex-col z-50 shadow-sm">
      <img src="/logoCA.png" alt="Logo Cuerpo Academico" width="200px" />
      <Navbar client:visible pathname={pathname} />
      <!-- <NavBar/> -->
    </div>
    <Accesibilidad client:load />
    <slot />

    <Footer />

    <style is:global>
      @tailwind base;
      @tailwind components;
      @tailwind utilities;

      @layer base {
        ul {
          @apply list-disc list-inside ml-2;
        }
        ol {
          @apply list-decimal list-inside ml-2;
        }
        h1 {
          @apply text-6xl;
        }
        h2 {
          @apply text-5xl;
        }
        h3 {
          @apply text-4xl;
        }
        h4 {
          @apply text-3xl;
        }
        h5 {
          @apply text-2xl;
        }
        h6 {
          @apply text-xl;
        }
      }
      :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          rgb(var(--accent-light)) 30%,
          white 60%
        );
      }
      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }
      body {
        height: 100vh;
        width: 100vw;
        box-sizing: border-box;
        font-family: "Bitter", sans-serif;
        overflow-x: hidden;
      }

      footer {
        /* height: 300px; */
        height: auto;
        background-color: #f97316;
        color: white;
      }

      section {
        min-height: 500px;
        padding: 5rem;
        @media (max-width: 681px) {
          padding: 2rem;
        }
      }

      .main-nav {
        svg {
          visibility: collapse;
        }
        @media (max-width: 681px) {
          svg {
            visibility: visible;
          }
          #container-nav {
            position: fixed;
            width: 50vw;
            height: 100vh;
            flex-direction: column;
            top: 0px;
            div,
            a {
              min-height: 50px;
              margin-bottom: 2px;
            }
          }
        }
      }
      .make-visible {
        right: 0px;
        transition: all 500ms ease-in-out;
      }
      .make-invisible {
        right: -50vw;
      }
      .block-img img {
        object-fit: cover;
        border-radius: 1.5rem;
        @media (min-width: 682px) {
          margin-inline: auto;
        }
      }
    </style>
  </body>
</html>
