---
import Layout from "../../layouts/Layout.astro";
import Caruselpersonal from "../../components/Caruselpersonal";
import CintaPage from "../../components/Cintapage.astro";
const { pathname } = Astro.url;
---

<Layout title="Lineas de generación y aplicación de conocimiento">
  <CintaPage title="Cuerpo academico" url={pathname} />
  <section class="flex flex-col">
    <div class="container mx-auto flex flex-col lg:flex-row gap-8 pt-10">
      <div class="ms:pl-40 lg:order-1">
        <div class="top-0 p-2 bg-white h-32 flex flex-col z-50 shadow-sm">
          <img
            src="/logoCA.png"
            alt="Logo Cuerpo Academico"
            width="350px"
            style="size-70 rounded-lg sm:size-40"
          />
        </div>
      </div>
      <div class="lg:order-1">
        <div class="mb-20">
          <h4>Cuerpo Académico - Computo Distribuido</h4>
          <span class="text-xs">En consolidación</span>
          <div class="pt-6">
            <h6 class="border-t">
              Líneas de investigación: Sistemas Distribuidos y Base de Datos
            </h6>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
